{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "chmod +x build_proto.sh && ./build_proto.sh && go build -o main .",
    "watchPatterns": ["**/*.go", "**/*.proto"]
  },
  "deploy": {
    "startCommand": "./main",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "PORT": "8080",
        "GRPC_PORT": "9090",
        "GO_ENV": "production"
      }
    }
  }
}
